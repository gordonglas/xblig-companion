<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokkisoft"
    android:versionCode="1"
    android:versionName="1.0" >

    <!-- don't set android:targetSdkVersion here because if we set that too high, the menu won't show (newer phones will think we are supporting menu items in the action-bar, but we don't want an action-bar since we rolled our own) -->
    <uses-sdk android:minSdkVersion="7" />

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/> -->
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomAppTheme" >
        <activity
            android:name=".XBLIGCompanionActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GamesActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".GameActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ImageViewerActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".DevActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".GenreActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".PickActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".SearchActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity
            android:name="com.tokkisoft.AboutActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>